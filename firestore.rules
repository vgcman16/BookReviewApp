rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own reading lists
    match /readingLists/{listId} {
      allow read, write: if request.auth != null;  // Allow any authenticated user during development
    }
    
    // Allow users to read and write their own reviews
    match /reviews/{reviewId} {
      allow read: if true;  // Anyone can read reviews
      allow write: if request.auth != null;  // Only authenticated users can write reviews
    }
  }
}
